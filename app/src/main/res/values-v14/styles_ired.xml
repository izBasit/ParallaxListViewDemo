<resources>

    <style name="Theme.Ired" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_ired</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Ired</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Ired</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Ired</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Ired</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Ired</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_ired</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_ired</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Ired</item>

                <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.Ired.Widget</item>

    </style>

    <style name="ActionBar.Solid.Ired" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_ired</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_ired</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_ired</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Ired</item>
    </style>

    <style name="ActionBar.Transparent.Ired" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@drawable/ab_transparent_ired</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Ired</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Ired.Widget" parent="@style/Theme.AppCompat">
        <item name="android:popupMenuStyle">@style/PopupMenu.Ired</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Ired</item>
    </style>

</resources>