<resources>

    <style name="Theme.Ired" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarItemBackground">@drawable/selectable_background_ired</item>
        <item name="popupMenuStyle">@style/PopupMenu.Ired</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Ired</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Ired</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Ired</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Ired</item>
        <item name="actionModeBackground">@drawable/cab_background_top_ired</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_ired</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Ired</item>
                <!-- Light.DarkActionBar specific -->
        <item name="actionBarWidgetTheme">@style/Theme.Ired.Widget</item>

    </style>

    <style name="ActionBar.Solid.Ired" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/ab_solid_ired</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_ired</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_ired</item>
        <item name="progressBarStyle">@style/ProgressBar.Ired</item>
    </style>

    <style name="ActionBar.Transparent.Ired" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@drawable/ab_transparent_ired</item>
        <item name="progressBarStyle">@style/ProgressBar.Ired</item>
    </style>
	
    <style name="PopupMenu.Ired" parent="@style/Widget.AppCompat.PopupMenu">	
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_ired</item>	
    </style>
	
    <style name="DropDownListView.Ired" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_ired</item>
    </style>

    <style name="ActionBarTabStyle.Ired" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_ired</item>
    </style>
	
    <style name="DropDownNav.Ired" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_ired</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_ired</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_ired</item>
    </style>
    
    <style name="ProgressBar.Ired" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_ired</item>
    </style>
    
    <style name="ActionButton.CloseMode.Ired" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_ired</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Ired.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Ired</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Ired</item>
    </style>

</resources>